<?xml version="1.0" ?>
<layout>
    <default>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/megamenu/font-awesome.min.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/megamenu/style.css</name></action>
        </reference>
        <reference name="header">
            <action method="unsetChild"><name>top.menu</name></action>
            <block type="core/text_list" name="top.menu" as="topMenu" translate="label">
                <label>Navigation Bar</label>
                <block type="megamenu/menu" name="catalog.topnav" template="megamenu/topmenu.phtml"/>
            </block>
        </reference>

    </default>
</layout>